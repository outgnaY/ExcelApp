<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efeff4">
    <android.support.v7.widget.Toolbar
        android:id="@+id/user_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1b82d1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@mipmap/arrow_left"
        app:title="个人信息"
        app:contentInsetStartWithNavigation="0dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"/>
    <!--姓名-->
    <RelativeLayout
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/name_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/user_detailed"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
        </TextView>
        <com.sjtu.ExcelApp.Customize.FontIconView
            android:id="@+id/user_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow_right"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        </com.sjtu.ExcelApp.Customize.FontIconView>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4">
    </View>
    <!--办公室-->
    <RelativeLayout
        android:id="@+id/user_office"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="办公室"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/office_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/user_office_detailed"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
        </TextView>
        <com.sjtu.ExcelApp.Customize.FontIconView
            android:id="@+id/user_office_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow_right"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        </com.sjtu.ExcelApp.Customize.FontIconView>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4">
    </View>
    <!--邮箱-->
    <RelativeLayout
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邮箱"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/email_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/user_email_detailed"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
        </TextView>
        <com.sjtu.ExcelApp.Customize.FontIconView
            android:id="@+id/user_email_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow_right"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        </com.sjtu.ExcelApp.Customize.FontIconView>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4">
    </View>
    <!--电话号码-->
    <RelativeLayout
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电话号码"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/phone_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/user_phone_detailed"
            android:layout_marginRight="10dp">
        </TextView>
        <com.sjtu.ExcelApp.Customize.FontIconView
            android:id="@+id/user_phone_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow_right"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        </com.sjtu.ExcelApp.Customize.FontIconView>
    </RelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4">
    </View>
    <!--角色权限-->
    <RelativeLayout
        android:id="@+id/user_role"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="角色权限"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
        </TextView>
        <TextView
            android:id="@+id/role_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
        </TextView>
    </RelativeLayout>

</LinearLayout>