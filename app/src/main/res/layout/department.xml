<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="部门总体数据"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:background="@color/departmentTotal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="资助计划上限"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/frag_upper_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="100000000"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="资助项目数"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/frag_project_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="100"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
            </TextView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="已执行数"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:id="@+id/frag_executed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="100"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="部门项目情况"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium">
    </TextView>
    <LinearLayout
        android:id="@+id/frag_list_view_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/frag_table_item_project"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="项目"
            android:textColor="#fff"
            android:background="@color/listViewHeader"
            android:paddingLeft="15dp">
        </TextView>
        <TextView
            android:id="@+id/frag_table_item_approval"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="批准数"
            android:textColor="#fff"
            android:background="@color/listViewHeader">
        </TextView>
        <TextView
            android:id="@+id/frag_table_item_subsidy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="资助金额"
            android:textColor="#fff"
            android:background="@color/listViewHeader">
        </TextView>
    </LinearLayout>
    <ListView
        android:id="@+id/frag_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
