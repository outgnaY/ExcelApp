    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/project_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="部门项目情况"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="17sp">
        </TextView>
        <LinearLayout
            android:id="@+id/list_view_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/table_item_project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:layout_gravity="center_vertical"
                android:text="项目类别"
                android:gravity="left"
                android:textColor="@color/departmentListHeader"
                android:paddingLeft="30dp">
            </TextView>
            <TextView
                android:id="@+id/table_item_approval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical"
                android:text="批准数"
                android:gravity="right"
                android:textColor="@color/departmentListHeader"
                android:paddingRight="25dp">
            </TextView>
            <TextView
                android:id="@+id/table_item_subsidy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:text="已资助(万)"
                android:gravity="right"
                android:textColor="@color/departmentListHeader"
                android:paddingRight="25dp">
            </TextView>
