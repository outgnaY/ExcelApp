<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/project_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/table_item_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="13sp"
            android:paddingLeft="15dp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/approval_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/table_item_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="13sp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/subsidy_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/table_item_subsidy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="13sp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/limit_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/table_item_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="13sp">
        </TextView>
    </RelativeLayout>
</LinearLayout>